    <Version>0.106.0</Version>
    <Authors>Thought Haven, Brendan Ridenour</Authors>
    <Company>Thought Haven</Company>
    <Description>Core abstractions and helpers for all AspNetCore applications.</Description>
    <Copyright>© Thought Haven. All rights reserved.</Copyright>
    <Product>Thought Haven AspNetCore Abstractions</Product>
    <LangVersion>8.0</LangVersion>
    <!--<Nullable>enable</Nullable>-->
    <NullableContextOptions>enable</NullableContextOptions>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Routing" Version="2.2.2" />
    <PackageReference Include="ThoughtHaven.Guards" Version="0.102.0" />
  </ItemGroup>

</Project>
